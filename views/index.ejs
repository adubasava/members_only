<% if (user) {%>
    <h1 class="text-center mt-2">WELCOME BACK <span class="text-primary font-bold"><%= user.firstname %> <%= user.lastname %></span></h1>    
  <% } else { %>
    <h1 class="text-center p-4"><a href="/log-in">Log in</a> to see more</h1>  
    
  <%}%>

  <div class="mx-auto grid max-w-[1000px]">
    <% for (let i = 0; i < messages.length; i++) { %>    
      <div class="mt-4 mr-6 ml-6 shadow-md rounded-lg bg-primary-dark text-white px-4 py-4">
        <% if (user) {%>
          <div class="bg-violet-300 p-1"> 
            <%= messages[i].firstname %> <%= messages[i].lastname %>
          </div>
          <% }%>   
        <div class="font-bold text-gray-300"><%= messages[i].title %> </div>
        <%= messages[i].text %> 
        <% if (user) {%>
        <div class="text-xs"> 
          <%= messages[i].timestamp.toLocaleString() %> 
        </div>
        <% }%>      
      </div>   
      <% if (user) {%> 
        <% if (user.is_admin) {%>
          <form method="POST" action="/messages/<%= messages[i].message_id %>/delete">
            <button class="ml-6 mb-6 rounded-lg bg-red-700 px-3 py-1 text-2xl text-white hover:bg-red-200 focus:outline-none active:bg-red-200" type="submit"
            onclick="return confirm('Are you sure?')">Delete</button>
          </form>          
        <% }%> 
      <% }%>   
    <% } %> 
  </div>
  
